<h1>My Tasks</h1>

<div style="display: flex">
	<ul>
		<% @tasks.each do |task|  %>
		
			<li><%= link_to task.title, task_path(task.id) %>
				<input type="checkbox">
				<p><%= link_to "Edit", edit_task_path(task.id) %></p>
				<p><%= link_to "Delete", 
												task_path(task.id),
            						method: :delete,
            						data: { confirm: "Are you sure?" } %></p>
			</li>
			

		<% end  %>
	</ul>
</div>

<div>
	<h2> <%= link_to "Create new task", new_task_path %> </h2>
</div>
